{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/ollama",
          "sidecar": true,
          "args": ["serve"]
        },
        {
          "name": "pkill",
          "args": ["-f", "ollama"]
        }
      ]
    },
    "shell:allow-open",
    "shell:allow-kill",
    "shell:default"
  ]
}
