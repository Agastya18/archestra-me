{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$HOME/.cursor/*"
        },
        {
          "path": "$HOME/Library/Application\\ Support/Claude/claude_desktop_config.json"
        }
      ]
    },
    "notification:default"
  ]
}